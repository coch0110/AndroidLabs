<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ChatRoomActivity">

    <ListView
        android:id="@+id/chat"
        android:layout_width="300dp"
        android:layout_height="match_parent">
    </ListView>

        <Button
            android:id="@+id/buttonSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/send_btn"
            android:layout_alignBottom="@id/chat"
            />


        <EditText
            android:id="@+id/editTextMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="@string/type_here_hint"
            android:layout_toEndOf="@id/buttonSend"
            android:layout_alignBottom="@id/chat"
            android:importantForAutofill="no" />

        <Button
            android:id="@+id/buttonReceive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/receive_btn"
            android:layout_alignEnd="@id/chat"
            android:layout_alignBottom="@id/chat" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/buttonReceive">
    </FrameLayout>

</RelativeLayout>